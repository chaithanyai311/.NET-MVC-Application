@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<style>
    .content{
        margin-top:10%;
    }
h1 {
        margin-top: 5%;
        font-family: sans-serif;
        font-size: 60px;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
    }

     h3{
        color: #254820;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .data {
        width: 200px
    }

    .label {
        width: 200px
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .table {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .link {
        background-color: #254820;
        padding: 1% 2%;
        color: white;
        margin-left: 2%;
        text-decoration:none;
    }

    .btn-danger{
        padding: 1% 2%;
    }
</style>
<div class="content">
<h1>Delete</h1>
<h4>@ViewBag.Msg</h4>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <div class="table">
        <dt class = "label">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "data">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        </div>
        <div class="table">
        <dt class = "label">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "data">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        </div>
        <div class="table">
        <dt class = "label">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "data">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId"/>
        <div class="btn">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="link" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
</div>

            